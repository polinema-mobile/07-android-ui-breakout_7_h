<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF4584" />
            <gradient android:angle="90" android:startColor="#E91E63" android:endColor="#D84375"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#11A5EF" />
            <solid android:color="#11A5EA"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E91E63" />
            <gradient android:angle="-90" android:startColor="#E91E63" android:endColor="#EF6091" />
        </shape>
    </item>
</selector>