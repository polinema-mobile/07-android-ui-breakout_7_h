<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TampilData">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_politeknik_negeri_malang"
        android:contentDescription="@string/desc_image" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_desc"
        android:textSize="30sp"
        android:textColor="#000"
        android:textFontWeight="700"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontal"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <TextView
        android:id="@+id/lblNIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIM"
        android:textSize="15sp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/horizontal"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtNIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1841720173"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/horizontal"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lblNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="15sp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/lblNIM"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unero Bhagaskara Ramadhan Marbun"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/txtNIM"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lblTglLahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:textSize="15sp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/lblNama"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtTgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/12/1999"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/txtNama"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lblGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:textSize="15sp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/lblTglLahir"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laki Laki"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/txtTgl"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lblJurusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jurusan"
        android:textSize="15sp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/lblGender"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtJurusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teknik Informatika"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/txtGender"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>